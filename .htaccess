# Enable Rewrite Engine
RewriteEngine On

# Redirect requests without .html to the corresponding .html file
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect direct access to .html files to clean URLs
RewriteCond %{THE_REQUEST} \s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Specific clean URL rules
RewriteRule ^about$ about.html [L]
RewriteRule ^founder$ founder.html [L]
RewriteRule ^projects$ projects.html [L]
RewriteRule ^services$ services.html [L]
RewriteRule ^contact$ contact.html [L]

# Ensure the root URL works
DirectoryIndex index.html
